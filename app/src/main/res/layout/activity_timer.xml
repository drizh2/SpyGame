<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Timer"
        android:background="@drawable/spy_bg">

    <Button
            android:layout_width="157dp"
            android:layout_height="48dp"
            android:id="@+id/startStopButton"
            android:text="@string/start"
            android:fontFamily="@font/spy_font"
            android:backgroundTint="@color/button"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="96dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="213dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spyButton"
            android:text="@string/spy_button"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@+id/startStopButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="51dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/button"
            android:textColor="@color/black"
            android:fontFamily="@font/spy_font"
            app:layout_constraintHorizontal_bias="0.305"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:layout_width="79dp"
            android:layout_height="75dp"
            app:srcCompat="@drawable/timer"
            android:id="@+id/timerLogo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="166dp"
            android:layout_marginEnd="166dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.184"
            app:tint="@color/label"/>

    <TextView
            android:text="@string/timer_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="59dp"
            app:layout_constraintTop_toBottomOf="@+id/timerLogo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="176dp"
            android:layout_marginBottom="47dp"
            app:layout_constraintBottom_toTopOf="@+id/startStopButton"
            android:layout_marginEnd="177dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/timerText"
            android:textColor="@color/label"
            android:textSize="50sp"
            android:fontFamily="@font/spy_font"
            android:background="@drawable/bg_rounded"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spyText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.681"
            android:textColor="@color/label"
            android:fontFamily="@font/spy_font"
            android:textSize="30sp"
            android:text="@string/clear"
            app:layout_constraintHorizontal_bias="0.498"
            android:background="@drawable/bg_rounded"/>

    <Button
            android:layout_width="243dp"
            android:layout_height="43dp"
            android:id="@+id/playAgainBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintVertical_bias="0.796"
            android:text="@string/play_again"
            android:textSize="20sp"
            android:fontFamily="@font/spy_font"
            android:backgroundTint="@color/button"
            android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>