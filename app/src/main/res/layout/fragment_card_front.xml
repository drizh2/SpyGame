<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="@null"
            android:layout_width="217dp"
            android:layout_height="290dp"
            android:id="@+id/cardBack"
            android:background="@drawable/bg_rounded"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:fontFamily="@font/spy_font"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/roleTextView"
            android:text="Ви [role]"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/spy_font"
            app:layout_constraintTop_toTopOf="@+id/cardBack"
            app:layout_constraintStart_toStartOf="@+id/cardBack"
            app:layout_constraintEnd_toEndOf="@+id/cardBack"
            android:layout_marginTop="44dp"
            app:layout_constraintHorizontal_bias="0.49"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wordTextView"
            android:text="Слово: [word]"
            android:textColor="@color/black"
            android:fontFamily="@font/spy_font"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/cardBack"
            app:layout_constraintEnd_toEndOf="@+id/cardBack"
            app:layout_constraintTop_toTopOf="@+id/cardBack"
            app:layout_constraintBottom_toBottomOf="@+id/cardBack"
            app:layout_constraintVertical_bias="0.67"/>

</androidx.constraintlayout.widget.ConstraintLayout>